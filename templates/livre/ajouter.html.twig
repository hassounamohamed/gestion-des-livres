{% extends 'base.html.twig' %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f4f8;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100vh;
        padding: 20px;
        color: #333;
    }

    h1 {
        font-size: 40px;
        text-align: center;
        margin-bottom: 30px;
        font-weight: 700;
        color: #4a90e2;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    form {
        display: grid;
        gap: 20px;
        background-color: #fff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        border: 1px solid #eaeaea;
    }

    input[type="text"], input[type="date"], textarea {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 14px;
        font-size: 16px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input[type="text"]:focus, input[type="date"]:focus, textarea:focus {
        border-color: #4a90e2;
        box-shadow: 0 0 8px rgba(74, 144, 226, 0.2);
        outline: none;
    }

    textarea {
        height: 120px;
        resize: vertical;
    }

    button[type="submit"] {
        background-color: #4a90e2;
        color: #fff;
        border: none;
        padding: 15px;
        border-radius: 8px;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button[type="submit"]:hover {
        background-color: #3d7ecb;
        transform: translateY(-2px);
    }

    button[type="submit"]:active {
        background-color: #356eb3;
        transform: translateY(0);
    }

    .btn-back {
        display: block;
        background-color: #50e3c2;
        color: #fff;
        text-align: center;
        text-decoration: none;
        padding: 15px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        margin-top: 20px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-back:hover {
        background-color: #3ac6a5;
        transform: translateY(-2px);
    }

    .btn-back:active {
        background-color: #32ab90;
        transform: translateY(0);
    }

    @media (max-width: 768px) {
        form {
            padding: 30px;
            gap: 15px;
        }

        input[type="text"], input[type="date"], textarea, button[type="submit"], .btn-back {
            font-size: 14px;
            padding: 12px;
        }

        h1 {
            font-size: 30px;
        }
    }
</style>


<h1>Ajouter un livre</h1>

<form method="post">
    <input type="text" name="titre" placeholder="Titre du livre" required>
    <input type="text" name="auteur" placeholder="Nom de l'auteur" required>
    <input type="date" name="datePublication" placeholder="Date de publication" required>
    <textarea name="description" placeholder="Description du livre"></textarea>

    <button type="submit">Ajouter</button>
</form>

<a href="{{ path('app_livres') }}" class="btn-back">Retour Ã  la liste des livres</a>

{% endblock %}
