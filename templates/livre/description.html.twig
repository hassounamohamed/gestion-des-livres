{% extends 'base.html.twig' %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .description-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        width: 100%;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .description-container:hover {
        transform: translateY(-6px);
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
    }

    h1 {
        font-size: 36px;
        color: #2c3e50;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .highlight {
        font-size: 22px;
        color: #2980b9;
        font-weight: 600;
        margin: 10px 0;
        text-align: center;
    }

    .author, .publication {
        font-size: 18px;
        color: #34495e;
        margin-bottom: 12px;
        text-align: center;
    }

    .descr {
        font-size: 20px;
        color: #2c3e50;
        font-weight: bold;
        margin-top: 20px;
        border-bottom: 2px solid #3498db;
        padding-bottom: 8px;
        display: inline-block;
    }

    p {
        font-size: 18px;
        color: #555;
        line-height: 1.8;
        margin: 10px 0;
        text-align: justify;
    }

    .content {
        margin-top: 20px;
        padding: 15px;
        background-color: #ecf0f1;
        border-radius: 12px;
        box-shadow: inset 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 768px) {
        .description-container {
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        }

        h1 {
            font-size: 28px;
        }

        .highlight {
            font-size: 20px;
        }

        .descr {
            font-size: 18px;
        }

        p {
            font-size: 16px;
        }
    }
</style>


<div class="description-container">
    <h1>Description du Livre</h1>
    <p class="highlight">Titre: {{ livre.Titre }}</p>
    <p class="author">Auteur: {{ livre.auteur }}</p>
    <p class="publication">Publi√© le: {{ livre.getDateDePublication()|date('d/m/Y') }}</p>
    <div class="content">
        <p class="descr">Description:</p>
        <p>{{ livre.description }}</p>
    </div>
</div>
{% endblock %}
